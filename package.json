{
  "name": "test-todomvc-using-app-actions",
  "version": "1.0.0",
  "description": "Example Cypress tests going from page objects to app actions",
  "main": "index.js",
  "scripts": {
    "start-and-test": "concurrently --kill-others npm:start npm:test:replay",
    "test": "cypress run",
    "test:replay-gecko": "RECORD_ALL_CONTENT=1 RECORD_REPLAY_METADATA_FILE=$(mktemp) cypress run --browser replay-firefox",
    "test:replay": "RECORD_ALL_CONTENT=1 RECORD_REPLAY_METADATA_FILE=$(mktemp) cypress run --browser replay-chromium",
    "test:replay-custom": "RECORD_ALL_CONTENT=1 RECORD_REPLAY_METADATA_FILE=$(mktemp) cypress run --browser",
    "start": "http-server -p 8888 -c-1",
    "start-quiet": "http-server -p 8888 -c-1 --silent",
    "cypress": "cypress open",
    "dev": "start-test 8888 cypress",
    "print-tests": "find-cypress-specs --names --tags",
    "lint": "tsc --noEmit --pretty",
    "ci": "start-test 8888 cy:run",
    "cy:run": "cypress run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bahmutov/test-todomvc-using-app-actions.git"
  },
  "keywords": [
    "cypress",
    "cypress-io",
    "cypress-example",
    "todomvc"
  ],
  "author": "Gleb Bahmutov <gleb.bahmutov@gmail.com> (https://glebbahmutov.com/)",
  "license": "MIT",
  "private": true,
  "bugs": {
    "url": "https://github.com/bahmutov/test-todomvc-using-app-actions/issues"
  },
  "homepage": "https://github.com/bahmutov/test-todomvc-using-app-actions#readme",
  "dependencies": {
    "http-server": "14.1.1"
  },
  "devDependencies": {
    "@replayio/cypress": "^1.0.5",
    "concurrently": "^8.2.0",
    "cypress": "10.9",
    "cypress-grep": "3.0.2",
    "cypress-repeat": "2.3.3",
    "cypress-watch-and-reload": "1.10.6",
    "find-cypress-specs": "1.18.0",
    "prettier": "2.7.1",
    "start-server-and-test": "1.14.0",
    "typescript": "4.7.4"
  }
}
